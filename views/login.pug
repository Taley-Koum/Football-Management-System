html(lang='en')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		title Admin Login Panel
		style 
			include ../pug_styles/login_style.css
	body
		div(id='hidden_message')
			h2 Revisit with a screen size larger than original.
		div(id='login_container')
			div(id='left_login_div')
				img(src="https://i.ibb.co/xX6jH9b/busa-logo-sponsored.jpg" alt="busa-logo-sponsored" width='250px' height='250px')
			div(id='form_div')
				form(action='/login' method='post')
					h2 Admin Login
					span#error-message.danger
						!= messages('messages', locals)
					input#username(type='text' name='username' placeholder='Admin Name' required)
					input#password(type='password' name='password' placeholder='Password' required)
					button(type='submit' id='form_button') Login
		script(src='router.js')
