                    <img class="img" src="https://i.ibb.co/PQxn8XT/man-utd.png" width="89px" height="89px" alt="Man-Utd">
                    <img class="img" src="https://i.ibb.co/TTCn3JJ/psg.png" width="89px" height="89px" alt="PSG">
        #draw_action 
            form(action="/draw" method="get" id="draw_form")
                button(type="submit" id="draw_button") DRAW
        script
            include ../pug_scripts/control.js
        